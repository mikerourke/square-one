{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "react"
  ],
  "settings": {
    "ecmascript": 6,
    // This is used to ensure the custom aliases I setup in Webpack don't
    // throw an error:
    "import/resolver": {
      "alias": [
        ["data", "../src/data"]
      ]
    }
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "binaryLiterals": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralDuplicateProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "octalLiterals": true,
      "regexUFlag": true,
      "regexYFlag": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "unicodeCodePointEscapes": true,
      "globalReturn": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    // Airbnb Style Guidelines:
    "prefer-const": 1,
    "no-var": 2,
    "no-new-object": 2,
    "object-shorthand": 1,
    "quote-props": [1, "as-needed"],
    "quotes": [1, "single"],
    "no-array-constructor": 1,
    "array-callback-return": 1,
    "template-curly-spacing": 1,
    "no-useless-escape": 1,
    "wrap-iife": 1,
    "no-loop-func": 1,
    "prefer-rest-params": 1,
    "no-param-reassign": 1,
    "prefer-arrow-callback": 1,
    "arrow-spacing": 1,
    "arrow-parens": [1, "as-needed"],
    "arrow-body-style": [1, "as-needed"],
    "no-confusing-arrow": 1,
    "no-useless-constructor": 1,
    "no-dupe-class-members": 1,
    "no-duplicate-imports": 1,
    "import/no-mutable-exports": 1,
    "import/imports-first": 1,
    "no-iterator": 1,
    // "generator-star-spacing": 1,
    "dot-notation": 1,
    "one-var": [1, "never"],
    "eqeqeq": 1,
    "no-case-declarations": 1,
    "no-nested-ternary": 1,
    "no-unneeded-ternary": 1,
    "brace-style": 1,
    // Airbnb specifies 2 tabs, but I prefer 4:
    "indent": [1, 4],
    "space-before-blocks": [1, "always"],
    "keyword-spacing": [
      1, {
        "before": true,
        "after": true
      }
    ],
    "space-infix-ops": 1,
    "newline-per-chained-call": 1,
    "no-whitespace-before-property": 1,
    "padded-blocks": [1, "never"],

    // Fixes for Redux and other issues:
    "import/default": 0,
    "import/namespace": [0, { "allowComputed": true }],
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,

    // Existing from React/Redux Pluralsight Course:
    "no-console": 1,
    "no-debugger": 1,
    "semi": [1, "always"],
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "jsx-quotes": 1,
    "react/display-name": [
      1, {
        "ignoreTranspilerName": false
      }
    ],
    "react/forbid-prop-types": [
      1, {
        "forbid": ["any"]
      }
    ],
    "react/jsx-boolean-value": 1,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-curly-spacing": 1,
    "react/jsx-indent-props": 0,
    "react/jsx-key": 1,
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-bind": 1,
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-pascal-case": 1,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-direct-mutation-state": 1,
    "react/no-multi-comp": 1,
    "react/no-set-state": 0,
    "react/no-unknown-property": 1,
    "react/prefer-es6-class": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/require-extension": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1
  }
}
